<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_hook0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onBtnHook1Clicked"
        android:text="hook OnClick" />

    <Button
        android:id="@+id/btn_hook1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onBtnHook1Clicked"
        android:text="hook Instrumentation" />

    <Button
        android:id="@+id/btn_hook2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onBtnHook2Clicked"
        android:text="hook ActivityThreadInstrumentation" />

    <Button
        android:id="@+id/btn_hook3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onBtnHook3Clicked"
        android:text="hook AMS" />

    <Button
        android:id="@+id/btn_hook4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="onBtnHook4Clicked"
        android:text="启动无注册的Activity" />

</LinearLayout>